<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gambar"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DATA DIRI"
        android:textColor="@color/colorPrimary"
        android:textSize="13pt"
        android:layout_gravity="center"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama"
        android:textSize="10pt"
        android:id="@+id/edt_nama"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Alamat"
        android:textSize="10pt"
        android:id="@+id/edt_alamat"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="No HP"
        android:textSize="10pt"
        android:id="@+id/edt_nohp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pekerjaan"
        android:textSize="10pt"
        android:id="@+id/edt_pekerjaan"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Lama Kerja"
        android:textSize="10pt"
        android:id="@+id/edt_lmkerja"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Asal Sekolah"
        android:textSize="10pt"
        android:id="@+id/edt_aslSekolah"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Kompetensi"
        android:textSize="10pt"
        android:id="@+id/edt_kompetensi"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Input"
        android:textSize="10pt"
        android:textColor="@color/color3"
        android:background="@color/color4"
        android:id="@+id/btn_input"
        android:layout_gravity="center"/>
</LinearLayout>